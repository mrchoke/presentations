  \setotherlanguages{english}
  \XeTeXlinebreaklocale "th"
  \XeTeXlinebreakskip = 0pt plus 1pt \relax
  \usebackgroundtemplate{\includegraphics[width=\paperwidth,height=\paperheight]{bg/BG-Presentation-NECTEC-inside.png}}
\fi


