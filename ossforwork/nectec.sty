\ifnectec@english
  \setdefaultlanguage{english}
  \setotherlanguages{thai}
  \XeTeXlinebreaklocale "us"
  \usebackgroundtemplate{\includegraphics[width=\paperwidth,height=\paperheight]{bg/BG-Presentation-NECTEC-en.png}}
